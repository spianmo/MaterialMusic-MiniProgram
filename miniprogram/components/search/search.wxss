.container {
  width: 100%;
  display: flex;
  align-items: center;
}

.container .input {
  flex: 0 0 70%;
  height: 65rpx;
  font-size: 28rpx;
  border-radius: 50px;
  border: 1px solid #dedede;
  background-color: #f5f5f5;
  padding-left: 60rpx;
  box-sizing: border-box;
  margin-right: 15rpx;
}

.container .search-btn {
  flex: 0 0 30%;
  display: inline;
  background: #DC4238;
  color: #fff;
  font-size: 26rpx;
}
