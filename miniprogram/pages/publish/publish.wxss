.icon-fanhui {
  font-size: 32rpx;
  color: #fff;
  z-index: 1003;
}

.toolbar-title {
  color: #FFFFFF;
  margin-left: 74rpx;
  margin-top: -10rpx;
}

.container {
  margin-top: 56px;
  padding: 20rpx;
}

.container .content {
  width: 100%;
  height: 360rpx;
  box-sizing: border-box;
  background-color: #f6f6f6;
  color: #333;
  padding: 10rpx;
}

.container .image-list {
  display: flex;
  flex-wrap: wrap;
  margin-top: 20rpx;
}

.container .image-list .image-wrap {
  width: 220rpx;
  height: 220rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  position: relative;
  overflow: hidden;
  text-align: center;
}

.container .image-list .image-wrap .image {
  width: 100%;
  height: 100%;
}

.container .image-list .image-wrap .icon-shanchu1 {
  position: absolute;
  top: 5px;
  right: 5px;
  width: 40rpx;
  height: 40rpx;
  background-color: #000;
  opacity: 0.4;
  color: #fff;
  text-align: center;
  line-height: 40rpx;
  font-size: 38rpx;
  font-weight: bolder;
}

.selectphoto {
  border: 2rpx dashed #ccc;
  position: relative;
  background-color: #f8f8f8;
}

.selectphoto .icon-tianjia {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: #ccc;
  font-size: 90rpx;
}

.footer {
  position: fixed;
  width: 100%;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  padding: 40rpx;
  background: #f1f1f1;
}

.footer .words-num {
  flex: 1;
  text-align: left;
  color: #474747;
  font-size: 32rpx;
  padding-right: 40rpx;
}

.footer .overflow {
  color: #d43c33;
}

.footer .send-btn {
  background: #d43c33;
  color: #fff;
  font-size: 28rpx;
}
